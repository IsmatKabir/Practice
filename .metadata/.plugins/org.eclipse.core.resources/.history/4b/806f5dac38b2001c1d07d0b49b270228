package learnjavaismat;

import java.util.Scanner;

public class Learnscanner {

//scanner is a class in java program	
//scanner take input from user and return the output in console

	
	public static void main(String[] args) {
	
	// create an object of scanner class
	//scanner class is coming from JDK
	// argument need to pass	
		
	Scanner input=new Scanner( System.in );
	//this system.in is helping us to take the input from the computer
	// with this object input we will create method
	System.out.println("Enter your name");
	String name=input.nextLine();
	
	System.out.println("my name is:"    + name   );
		
	}
	
	
	
	
	
	
	
	
}
