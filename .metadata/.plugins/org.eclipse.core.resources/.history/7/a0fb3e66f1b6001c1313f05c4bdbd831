package learnjavaismat;

import java.util.Scanner;

public class Scanner1 {
public static void main(String[] args) {

	Scanner sc1=new Scanner(System.in);
	
	System.out.println("          Fresh Food bazar                       ");
	System.out.println("          45,woodside avenue                     ");
	System.out.println("           Elmhurst,Ny 11373                     ");
	System.out.println("            718 466 2250                         ");
	System.out.println("-------------------------------------------------");

	
	System.out.println("List of item");
	System.out.println("nutella qty");
	int nutQt=sc1.nextInt();
	System.out.println("nutella price");
	double nutPrc=sc1.nextDouble();
	double nutTtl=nutQt*nutPrc;
	System.out.println("nutella total price"    +  nutTtl   );
	System.out.println("Strawberry box qty");
	short strQt=sc1.nextShort();
	System.out.println("strawberry box price");
	double strPc=sc1.nextDouble();
	double strTtl=strQt*strPc;
	System.out.println("strawberry total price"  +strTtl   );
	double subtotal=nutTtl+strTtl;
	System.out.printf("Subtotal=  %.2f" ,subtotal            );
	System.out.println();
	double ttlTax=subtotal*.0887;
	System.out.printf("total tax=  %.2f",ttlTax            );
	System.out.println();
	double totalAfterTax=subtotal+ttlTax;
	System.out.printf("Total After Tax= %.2f",totalAfterTax );
		
	System.out.println();
	System.out.println("************Thank you*******");





}
}
