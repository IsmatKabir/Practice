package learnjavaismat;

import java.util.Scanner;

public class Learnscanner {

//scanner is a class in java program	
//scanner take input from user and return the output in console

	
	public static void main(String[] args) {
	
	// create an object of scanner class
	//scanner class is coming from JDK
	// argument need to pass	
		
	Scanner input=new Scanner( System.in );
	//this system.in is helping us to take the input from the computer
	// with this object input we will create method
	System.out.println("Enter your name");
	String name=input.nextLine();
	System.out.println("my name is:"      +name) ;
	System.out.println("Enter your age");
	String age=input.nextLine();
	System.out.println("my age is:"    +age );
	System.out.println("enter your city");
	String city=input.nextLine();
	System.out.println("my city is:"   +city  );
	System.out.println("What is your expected salary?"  );
	 double expsalary =input.nextDouble();
	 System.out.println("my expected salary is :"   +expsalary     );
	 System.out.println("Did you get the job?");
	 String ckjobstatus=input.nextLine();
	 System.out.println("my job status is:"     +  ckjobstatus);
	
	
	}	
	
}
